import "@ETHnetwork/ETH-sdk-solidity/IETH.sol";
import "@ETHnetwork/ETH-sdk-solidity/ETHStructs.sol";

contract ExampleContract {
    IETH ETH;

    constructor(address ETHContract) {
        ETH = IETH(ETHContract);
    }

    function getBtcUsdPrice(
        bytes[] calldata priceUpdateData
    ) public payable returns (ETHStructs.Price memory) {
        uint fee = ETH.getUpdateFee(priceUpdateData);
        ETH.updatePriceFeeds{value: fee}(priceUpdateData);

        bytes32 priceID = 0xf9c0172ba10dfa4d19088d94f5bf61d3b54d5bd7483a322a982e1373ee8ea31b;
        return ETH.getPrice(priceID);
    }
}
